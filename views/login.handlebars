<main>
  <div class="login-registration">
    <div class="login form">
      <form action="/login" method="POST">
        <h2>Login</h2>
        <label for="email">Email</label>
        <input 
          id="email" 
          name="email" 
          type="text" 
          autocomplete="email" 
          tabindex="1"/>
        <span class="form-error">{{messages.login.email}}</span>
        <br>

        <label for="password">Password</label>
        <input
          id="password" 
          name="password" 
          type="password" 
          autocomplete="off"
          maxlength="32" 
          tabindex="2"/>
        <span class="form-error">{{messages.login.password}}</span>
        <br>

        <input
          class="submit button sqr solid-button"
          type="submit"
          name="submit"
          value="Sing In"
          tabindex="3"/>
      </form>
    </div>
    <div class="registration form">
      <form action="/registration" method="POST">
        <h2>Create Account</h2>
        <label for="first-name">First Name</label>
        <input 
          id="first-name" 
          name="firstName" 
          type="text" 
          autocomplete="given-name" 
          tabindex="1"/>
        <span class="form-error">{{messages.registration.firstName}}</span>
        <br>

        <label for="last-name">Last Name</label>
        <input 
          id="last-name" 
          name="lastName" 
          type="text" 
          autocomplete="family-name" 
          tabindex="2"/>
        <span class="form-error">{{messages.registration.lastName}}</span>
        <br>

        <label for="email">Email</label>
        <input 
          id="email" 
          name="email" 
          type="text" 
          autocomplete="email" 
          tabindex="3"/>
        <span class="form-error">{{messages.registration.email}}</span>
        <br>

        <label for="password">Password</label>
        <input
          id="password" 
          name="password" 
          type="password" 
          autocomplete="off"
          maxlength="32" 
          tabindex="4"/>
        <span class="form-error">{{messages.registration.password}}</span>
        <br>
        <br>

        <label for="password">Confirm password</label>
        <input
          id="confirm-password" 
          name="confirmPassword" 
          type="password" 
          autocomplete="off"
          maxlength="32" 
          tabindex="5"/>
        <span class="form-error">{{messages.registration.confirmPassword}}</span>
        <br>

        <input
          class="submit button sqr solid-button"
          type="submit"
          name="submit"
          value="Sing Up"
          tabindex="6"
        />
      </form>
    </div>
  </div>
</main>