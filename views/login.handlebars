<main>
  <div class="login-registration">
    <div class="login form">
      <form action="">
        <h2>Login</h2>
        <label for="email">Email</label>
        <input 
          id="email" 
          name="email" 
          type="email" 
          autocomplete="email" 
          tabindex="1" 
          required/>

        <label for="password">Password</label>
        <input
          id="password" 
          name="password" 
          type="password" 
          autocomplete="off"
          maxlength="32" 
          tabindex="2"
          required/>

        <input
          class="submit button sqr solid-button"
          type="submit"
          name="submit"
          value="Sing In"
          tabindex="3"
        />
      </form>
    </div>
    <div class="registration form">
      <form action="">
        <h2>Create Account</h2>
        <label for="first-name">First Name</label>
        <input 
          id="first-name" 
          name="first-name" 
          type="text" 
          autocomplete="given-name" 
          tabindex="1" 
          required/>

        <label for="last-name">Last Name</label>
        <input 
          id="last-name" 
          name="last-name" 
          type="text" 
          autocomplete="family-name" 
          tabindex="2" 
          required/>

        <label for="email">Email</label>
        <input 
          id="email" 
          name="email" 
          type="email" 
          autocomplete="email" 
          tabindex="3" 
          required/>

        <label for="password">Password</label>
        <input
          id="password" 
          name="password" 
          type="password" 
          autocomplete="off"
          maxlength="32" 
          tabindex="4"
          required/>

        <label for="password">Confirm password</label>
        <input
          id="password" 
          name="password" 
          type="password" 
          autocomplete="off"
          maxlength="32" 
          tabindex="5"
          required/>

        <input
          class="submit button sqr solid-button"
          type="submit"
          name="submit"
          value="Sing Up"
          tabindex="6"
        />
      </form>
    </div>
  </div>
</main>